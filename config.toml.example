slack_bot_token = 'xoxb-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXX'
slack_app_token = 'xapp-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXX'
allowed_user_ids = ['U0123456789']
allowed_channel_ids = ['C0123456789']
# allow_unsafe_open_access = true # 非推奨: 全ユーザー・全チャンネルからの実行を許可

[[commands]]
keyword = 'date'
command = 'date'
icon_emoji = ':alarm_clock:'
username = 'Clock'

[[commands]]
keyword = 'uname'
command = 'uname -mrs'
username = 'OS info'
icon_emoji = ':computer:'

[[commands]]
keyword = 'echo *'
command = '/bin/echo *'
monospaced = true

[[commands]]
keyword = 'notify *'
runner = 'http'
method = 'POST'
url = 'https://example.com/hooks/notify'
headers = { 'Content-Type' = 'application/json' }
body = '{"text":"*"}'
